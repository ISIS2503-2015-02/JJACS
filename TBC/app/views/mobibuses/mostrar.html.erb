<% #encoding: utf-8%>
<h1>Mobibus</h1>

<table>
  <thead>
  <tr>
    <th>Placa</th>
    <th>Estado</th>
    <th> Latitud</th>
    <th> Longitud</th>
    <th> Kilometros desde ultima revision</th>
    <th>Id</th>
    <th>Id conductor</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @mobibus.placa %></td>
        <td><%= @mobibus.estado %></td>
        <td><%= @mobibus.latitud %></td>
        <td><%= @mobibus.longitud%></td>
        <td><%= @mobibus.kilometer_desde_revision %></td>
        <td><%= @mobibus.id %></td>
        <%#TODO User.where deberÃ­a estar en el controlador, no en la vista. %>
        <% @conductores1= User.where("mobibus_id = ?",@mobibus.id)%>
        <% if  @conductores1.first != nil %>
            <td><%=@conductores1.first.id %></td>
        <% else %>
            <td>N/A</td>
        <% end%>
      </tr>
  </tbody>
</table>