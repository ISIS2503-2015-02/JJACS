<% #encoding: utf-8%>
<h1>Tranvia<%=" #{@tranvia.numero_identificacion}"%></h1>

<br>
<table>
  <thead>
  <tr>
    <th>Id tranvia</th>
    <th>Linea</th>
    <th>Latitud</th>
    <th>longitud</th>
    <th>Estado</th>
    <th>Kilometros desde ultima revision</th>
    <th>Temperatura</th>
    <th>Boton panico</th>
    <th>Id conductor</th>
    <th colspan="9"></th>
  </tr>
  </thead>

  <tbody>
      <tr>
        <td><%=@tranvia.numero_identificacion %></td>
        <td><%=@tranvia.linea %></td>
        <td><%=@tranvia.latitud %></td>
        <td><%=@tranvia.longitud %></td>
        <td><%=@tranvia.estado %></td>
        <td><%=@tranvia.kilometros_desde_revision %></td>
        <td><%=@tranvia.temperatura %></td>
        <td><%=@tranvia.boton_panico %></td>

        <% if  @tranvia.conductor != nil %>
            <td><%=@tranvia.conductor.nombre %></td>
        <% else %>
            <td>N/A</td>
        <% end%>
      </tr>

  </tbody>
</table>

